<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fank.f1k2.business.dao.StaffInfoMapper">

    <!-- 分页获取车主管理 -->
    <select id="queryPage" resultType="java.util.LinkedHashMap">
        SELECT
        *
        FROM
        staff_info
        WHERE
        1 = 1
        <if test="queryFrom.name != null and queryFrom.name != ''">
            AND name LIKE CONCAT('%',#{queryFrom.name},'%')
        </if>
        <if test="queryFrom.code != null and queryFrom.code != ''">
            AND code LIKE CONCAT('%',#{queryFrom.code,'%')
        </if>
        <if test="queryFrom.status != null and queryFrom.status != ''">
            AND status LIKE CONCAT('%',#{queryFrom.status,'%')
        </if>
        ORDER BY
        create_date DESC
    </select>

    <!-- 根据ID查询车主信息 -->
    <select id="queryStaffByIds" resultType="java.util.LinkedHashMap">
        SELECT
        *
        FROM
        staff_info
        WHERE
        1 = 1
        <if test="staffIdList != null and staffIdList.size() > 0">
            AND id IN
            <foreach collection="staffIdList" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>
        ORDER BY
        create_date DESC
    </select>
</mapper>
