<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fank.f1k2.business.dao.PriceRulesMapper">

    <!-- 分页获取价格规则 -->
    <select id="queryPage" resultType="java.util.LinkedHashMap">
        SELECT
            *
        FROM
            price_rules
        WHERE
            1 = 1
        <if test="queryFrom.code != null and queryFrom.code != ''">
            AND code LIKE CONCAT('%',#{queryFrom.code},'%')
        </if>
        <if test="queryFrom.remark != null and queryFrom.remark != ''">
            AND remark LIKE CONCAT('%',#{queryFrom.remark},'%')
        </if>
        ORDER BY
            create_date DESC
    </select>
</mapper>
