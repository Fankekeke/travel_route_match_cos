<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fank.f1k2.business.dao.UserInfoMapper">

    <!-- 分页获取用户管理 -->
    <select id="queryPage" resultType="java.util.LinkedHashMap">
        SELECT
        *
        FROM
        user_info
        WHERE
        1 = 1
        <if test="queryFrom.name != null and queryFrom.name != ''">
            AND name LIKE CONCAT('%',#{queryFrom.name},'%')
        </if>
        <if test="queryFrom.code != null and queryFrom.code != ''">
            AND code LIKE CONCAT('%',#{queryFrom.code,'%')
        </if>
        <if test="queryFrom.phone != null and queryFrom.phone != ''">
            AND phone LIKE CONCAT('%',#{queryFrom.phone,'%')
        </if>
        ORDER BY
        create_date DESC
    </select>

    <!-- 根据用户ID列表查询用户信息 -->
    <select id="queryUserByIds" resultType="java.util.LinkedHashMap">
        SELECT
        *
        FROM
        user_info
        WHERE
        1 = 1
        <if test="userIdList != null and userIdList.size() > 0">
            AND id IN
            <foreach collection="userIdList" item="id" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>
        ORDER BY
        create_date DESC
    </select>
</mapper>
